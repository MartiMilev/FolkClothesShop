@page
@model RegisterModel
@{
	ViewBag.Title = "Registration";
	Layout = "~/Views/Shared/_Layout.cshtml"; // Ако използвате общ шаблон (layout)
}

<style>
	body {
		background-image: url('https://scontent.fsof8-1.fna.fbcdn.net/v/t31.18172-8/26173369_10155994672033711_6116726213032214097_o.jpg?_nc_cat=109&ccb=1-7&_nc_sid=730e14&_nc_ohc=cTWl5-dX95gAX9_jmD2&_nc_ht=scontent.fsof8-1.fna&oh=00_AfAXttcInKdR16Dp9uhcFF8p-OwxsPDxDHpTz0aHnxlrVA&oe=64C9280F');
		margin:0;
	}

	.registration-form {
		width: 300px;
		margin: 0 auto;
		padding: 20px;
		 box-shadow: inset 0 0 2000px rgba(255, 255, 255, .5);
		border: 1px solid #ddd;
		border-radius: 4px;
	}

		.registration-form h2 {
			text-align: center;
			margin-bottom: 20px;
		}

		.registration-form label {
			display: block;
			margin-bottom: 5px;
		}

		.registration-form input[type="text"],
		.registration-form input[type="email"],
		.registration-form input[type="password"] {
			width: 100%;
			padding: 10px;
			margin-bottom: 10px;
			border: 1px solid #ddd;
			border-radius: 4px;
		}

		.registration-form input[type="submit"] {
			width: 100%;
			padding: 10px;
			background-color: #B22222;
			color: #fff;
			border: none;
			border-radius: 4px;
			cursor: pointer;
		}

			.registration-form input[type="submit"]:hover {
				background-color: #45a049;
			}
</style>

<div class="registration-form">

	 <font color="#FFFFFF">
		<h2>Registration</h2>
	</font>

	<form action="/Registration/Register" method="post">
		<font color="#FFFFFF" for="Name:">
		<label for="name">Name:</label>
		</font>
		<input type="text" id="name" name="name" required />
		<font color="#FFFFFF" for="Email:">
		<label for="email">Email:</label>
		<input type="email" id="email" name="email" required />

		<label for="password">Password:</label>
		<input type="password" id="password" name="password" required />

		<label for="confirmPassword">Confirm Password:</label>
		<input type="password" id="confirmPassword" name="confirmPassword" required />

		<input type="submit" value="Register" />
		</font>
	</form>
	</>


	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
	}
