@page
@model LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<style>
    body {
        background-image: url('https://scontent.fsof8-1.fna.fbcdn.net/v/t31.18172-8/26173369_10155994672033711_6116726213032214097_o.jpg?_nc_cat=109&ccb=1-7&_nc_sid=730e14&_nc_ohc=cTWl5-dX95gAX9_jmD2&_nc_ht=scontent.fsof8-1.fna&oh=00_AfAXttcInKdR16Dp9uhcFF8p-OwxsPDxDHpTz0aHnxlrVA&oe=64C9280F');
        margin:0;
        background-attachment: fixed;
    }
    .container:before {
    box-shadow: inherit;
}
    .login-form {
        width: 300px;
        margin: 0 auto;
        padding: 20px;
       box-shadow: inset 0 0 2000px rgba(255, 255, 255, .5);

        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .login-form h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .login-form label {
        display: block;
        margin-bottom: 5px;
    }

    .login-form input[type="text"],
    .login-form input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .login-form input[type="submit"] {
        width: 100%;
        padding: 10px;
            background-color: #B22222;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .login-form input[type="submit"]:hover {
                background-color: #4CAF50;
    }
</style>

<div class="login-form">

    <font color="#FFFFFF">
        <h2>Login</h2>
    </font>

    <form id="account" method="post">
    <font color="#FFFFFF" for="username">
            <h4>Email:</h4>
       
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
         <span asp-validation-for="Input.Email" class="text-danger"></span>
        <font color="#FFFFFF" for="username">
        </font>
        <font color="#FFFFFF" for="password">
            <h4>Password:</h4>
        </font>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        <input type="submit" value="Login" />
    </form>
</div>
        

  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
