@model ProductAllViewModel
<div class="col-md-4">
	<div class="card mb-3">
		<img class="card-img-top" src="@Model.ImageUrl" alt="Снимка">
		<div class="card-body text-center">
			<h4>@Model.Title</h4>
			
			<h6>Име: <b>@Model.Title</b></h6>
			<h6>
				Цена:
				<b>@($"{Model.Price:f2}") BGN</b>
			</h6>
			<br />
			<a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id"
			   class="btn btn-success">Details</a>
			@if (this.User.Identity?.IsAuthenticated?? false)
			{
				<a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id"
			   class="btn btn-warning">Edit</a>
				<a asp-controller="Product" asp-action="Delete" asp-routeid="@Model.Id"
			   class="btn btn-danger">Delete</a>
				<p></p>
				
					<form asp-controller="Product" asp-action="Leave"
				  asp-route-id="@Model.Id" method="post">
						<input class="btn btn-primary" type="submit" value="Leave" />
					</form>
			}
		</div>
	</div>
</div>
