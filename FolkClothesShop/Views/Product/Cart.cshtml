@model List<ProductAllViewModel>
@{
	ViewBag.Title = "Количка";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
@if (!Model.Any())
{
	<h2 class="text-center">Нямате продукти в количката</h2>

}
else
{
	<div class="row">
		@foreach (ProductAllViewModel product in Model)
		{
			<partial name="ProductPartial" model="product" />
		}
	</div>
}