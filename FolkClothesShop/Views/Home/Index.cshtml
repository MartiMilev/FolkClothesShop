@model IEnumerable<IndexViewModel>
@{
	ViewData["Title"] = "Home Page";
	var products = Model.ToList();
}
@if (!products.Any())
{
	<div class="mt-4 p-5 bg-light">
		
		<hr class="my-4">
		<p class="lead">
			@if (User.Identity.IsAuthenticated)
			{
				<a asp-controller="Product" asp-action="Add" class="btn btn-primary
btn-lg"
		   role="button">Add Product</a>
			}
		</p>
	</div>
}
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@for (int i = 0; i < products.Count(); i++)
		{
			var product = products[i];
			<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
				<img class="d-block w-100" style="height:500px"
				 src="@product.ImageUrl" alt="@product.Title">

				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-primary" asp-controller="House" aspaction="Details"
					   asp-route-id="@product.Id"> @product.Title</a>
					</h5>
				</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>
